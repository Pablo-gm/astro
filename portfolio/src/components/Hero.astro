---
import DownloadIcon from "@/components/icons/Download.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import GitHubIcon from "@/components/icons/GitHub.astro"
import BehanceIcon from "@/components/icons/Behance.astro"
import SocialPill from "@/components/SocialPill.astro"
---
<div class="flex gap-6 mt-16">
    <div class="w-2/3">
        <h1
            class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
        >
            Hello, I'm Pablo
        </h1>
        <p
            class="mt-6 text-2xl leading-10 text-gray-800 dark:[&>strong]:text-gray-800 [&>strong]:text-gray-700 [&>strong]:font-semibold dark:text-gray-300"
        >
            With over <strong class="bg-blue-100 px-2 py-1 rounded-md ">+10 years of experience</strong>, I am a seasoned <strong class="bg-amber-100 px-2 py-1 rounded-md ">UI Engineer</strong> passionate about crafting intuitive and visually compelling user interfaces. 
        </p>
        <nav class="flex flex-wrap gap-4 mt-8">
            <SocialPill href="https://www.linkedin.com/in/pablo-gm/" primary="1">
                <DownloadIcon class="size-5" />
                Resume
            </SocialPill>
            <SocialPill href="https://www.linkedin.com/in/pablo-gm/">
                <LinkedInIcon class="size-5" />
                LinkedIn
            </SocialPill>
            <SocialPill href="https://github.com/Pablo-gm">
                <GitHubIcon class="size-5" />
                Github
            </SocialPill>
            <SocialPill href="https://www.behance.net/pablogomez14">
                <BehanceIcon class="size-5" />
                Behance
            </SocialPill>
        </nav>
    </div>
    <div class="w-1/3">
        <div class="flex items-center justify-center w-full h-64 bg-gray-300 rounded-sm sm:w-96 dark:bg-gray-700">
            <svg class="w-10 h-10 text-gray-200 dark:text-gray-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                <path d="M18 0H2a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2Zm-5.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm4.376 10.481A1 1 0 0 1 16 15H4a1 1 0 0 1-.895-1.447l3.5-7A1 1 0 0 1 7.468 6a.965.965 0 0 1 .9.5l2.775 4.757 1.546-1.887a1 1 0 0 1 1.618.1l2.541 4a1 1 0 0 1 .028 1.011Z"/>
            </svg>
        </div>
    </div>
</div>


