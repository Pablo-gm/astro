---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  company: string
  description: Array<string>
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---

<div
  class="relative ml-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-6 md:col-span-2">
    <div class="sticky top-0">
      <h3 class="text-2xl font-bold text-blue-800 dark:text-blue-300">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-gray-300">{company}</h4>
      <time class="p-0 m-0 text-sm text-gray-600 dark:text-gray-300">{date}</time>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
        <ul class="space-y-1 text-lg list-disc">
        {
            description.map((bp) => (
            <li class="">
                {bp}
            </li>
            ))
        }
        </ul>
    {
      link && (
        <LinkInline href={link}>
          Learn more{" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      )
    }
  </div>
</div>